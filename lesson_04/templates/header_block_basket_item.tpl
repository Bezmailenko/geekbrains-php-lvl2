<div class="cart-product">
    <img src="/img/{{IMAGE}}" class="cart-product__img" alt="Layer">
    <div class="cart-product__text"><p class="cart-product__title">{{NAME}}</p>
        <div class="cart-product__star-rat"><span class="ratings two-half"></span></div>
        <div class="change">
            <button class="change__btn" data-id="{{IDX}}" data-price="{{PRICE}}" data-sign="minus"></button>
            <input class="change__count" value="{{COL}}" type="text">
            <button class="change__btn" data-id="{{IDX}}" data-price="{{PRICE}}" data-sign="plus"></button>
        </div>
        <p><span>{{COL}}<span></span> x <span>{{PRICE}}$</span></span></p>
        <p></p></div>
    <button class="cart-product__delete-btn" data-id="{{IDX}}" data-price="{{PRICE}}" data-name="{{NAME}}" data-src="{{IMAGE}}"></button>
</div>

